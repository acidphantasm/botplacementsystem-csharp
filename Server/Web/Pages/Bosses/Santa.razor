                        MainLayout.pendingChanges.Contains("_Santa_Enabled"))
                        {
                            <MudButton @onclick="undo_Santa_Enable" Variant="Variant.Filled" Color="Color.Inherit" Size="Size.Small">Undo</MudButton>
                        }
